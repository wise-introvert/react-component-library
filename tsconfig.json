{
  "compilerOptions": {
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "noImplicitAny": true,
    "sourceMap": true,
    "strict": true,
    "lib": ["es5", "dom", "es6", "es2016", "es2017"],
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "target": "es5"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/**/*.stories.tsx", "src/**/*.test.tsx"]
}
